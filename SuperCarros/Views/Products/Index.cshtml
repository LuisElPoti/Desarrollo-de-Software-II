@model IEnumerable<SuperCarros.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>Imagen</th>
        <th>
            @Html.DisplayNameFor(model => model.Code)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            Detalle
        </th>
        <th>
            Precio
        </th>
        <th>
            Estado
        </th>
        <th>
            Descripción
        </th>

        <th>Fecha de creación</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Content/image/@(string.IsNullOrEmpty(item.Picture) ? "default.png" : item.Picture)" style="height:75px; width:75px" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Code)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            Categoria: @item.Category.Name <br />
            Marca: @item.Mark.Name <br />
            Suplidor: @item.Supplier.Name <br />
            Color interior: @item.ColorInside <br />
            Color Exterior: @item.ColorOutside <br />
            Combustible: @item.Fuel <br />
            Año: @item.Year <br />


        </td>
        <td>
            <span style="color:red">@item.ListPrice</span>

        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.CreatedDate)
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
